  <h2> Edit Trainer</h2>
  <div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
    <img src="<%=@trainer.photo%>" style="width: 50%;"><br><br>
  </div>

  <div class="col-sm-9">
    <form method="post" action="/trainer/<%=@trainer.id%>">
      <input id="hidden" type="hidden" name="_method" value="PATCH">
        <table style="width:100%">
          <tr>
            <th>Update Trainer <br>Name:</th>
            <th>Update Trainer Bio:</th>
          </tr>
          <tr>
            <td><input type="text" name="name" value="<%= @trainer.name %>" placeholder="<%= @trainer.name %>">
            </td>

            <td>
            <textarea rows="10" cols="70" type="text" name="bio" value="<%= @trainer.bio %>" placeholder="<%= @trainer.bio %>"><%= @trainer.bio %></textarea>
            </td>
          </tr>
        </table>
        <input type="submit" value="Edit Trainer Bio">
     </form>
   </div>
